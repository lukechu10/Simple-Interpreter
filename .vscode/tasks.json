{
    "tasks": [
        {
            "type": "process",
            "label": "build debug with cmake",
            "command": "cmake",
            "args": [
                "--build",
                "build" // build folder
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build"
        }
    ],
    "version": "2.0.0"
}
